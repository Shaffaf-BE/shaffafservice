    <!--
        Added the constraints for entity Unit.
    -->
    <changeSet id="20250601084307-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="unit_id"
                                 baseTableName="rel_unit__fees_collections"
                                 constraintName="fk_rel_unit__fees_collections__unit_id"
                                 referencedColumnNames="id"
                                 referencedTableName="unit"
